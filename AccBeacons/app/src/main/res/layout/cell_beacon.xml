<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvMajor"
        android:text="Major : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvMajorValue"
        app:layout_constraintLeft_toRightOf="@+id/tvMajor"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMinor"
        android:text="Minor : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginStart="5dp"
        app:layout_constraintLeft_toRightOf="@+id/tvMajorValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvMinorValue"
        app:layout_constraintLeft_toRightOf="@+id/tvMinor"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTransition"
        android:text="Transition : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/tvMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTransitionValue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tvTransition"
        app:layout_constraintTop_toBottomOf="@+id/tvMajor" />

    <TextView
        android:id="@+id/tvDistance"
        android:text="Distance : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTransition"/>

    <TextView
        android:id="@+id/tvDistanceValue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tvDistance"
        app:layout_constraintTop_toBottomOf="@+id/tvTransition" />

    <TextView
        android:id="@+id/tvAccuracy"
        android:text="Proximity : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"

        app:layout_constraintLeft_toRightOf="@+id/tvDistanceValue"
        app:layout_constraintTop_toBottomOf="@+id/tvTransition" />

    <TextView
        android:id="@+id/tvAccuracyValue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tvAccuracy"
        app:layout_constraintTop_toBottomOf="@+id/tvTransition" />

</android.support.constraint.ConstraintLayout>